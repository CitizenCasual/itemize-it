<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<% if (item.owner.equals(user?.profile._id)) { %>
  <h1><%= title %></h1> 
  <div id="item-view-container">
    <div id="info-container">
      <h1><%= item.title %> </h1>
      <p>Date Acquired:<%= item.date %> </p>
      <p>Hours:<%= item.hours %> </p>
      <p>Willing to Share?:<%= item.shareStatus %> </p>
      <p>Condition:<%= item.condition %> </p>
    </div>
    <form action="/items/<%= item._id %>/newNote " method="POST"> 
      <div id="notes-input-container"> 
        <button class="btn" type="submit">Create Note</button>
      </div>
    </form>
    <form action="/items/<%= item._id %>/edit " method="GET">
      <button class="btn" type="submit">Update this Item</button>
    </form>
    <form action="/items/<%= item._id %>?_method=DELETE " method="POST">
      <button class="btn" type="submit">Delete this Item</button>
    </form>
  <% } %> 


<%- include('../partials/footer') %>